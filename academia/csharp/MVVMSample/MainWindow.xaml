<Window x:Class="MVVMSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="469" Width="1209">
	<Grid Margin="0,0,-80,-41">
		<TextBlock HorizontalAlignment="Left" Margin="295,64,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" FontSize="36" Width="505"/>
		<RadioButton Name="HelloRadio" IsChecked="True" Content="Hello" HorizontalAlignment="Left" Height="27" Margin="295,247,0,0" VerticalAlignment="Top" Width="135" FontSize="18"/>
		<RadioButton x:Name="GoodbyeRadio" Content="Good Bye" HorizontalAlignment="Left" Height="27" Margin="500,247,0,0" VerticalAlignment="Top" Width="144" FontSize="18"/>
		<Button x:Name="DisplayButton" Content="Display Message" HorizontalAlignment="Left" Height="65" Margin="362,304,0,0" VerticalAlignment="Top" Width="258" FontSize="18" FontWeight="Bold" Click="DisplayButton_Click"/>
	</Grid>
</Window>
